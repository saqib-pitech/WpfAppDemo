<Window x:Class="WpfAppDemo.DataBindingDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDemo"
        mc:Ignorable="d"
        Title="DataBindingDemo" Height="450" Width="800">
    <StackPanel>
        <TextBox Name="txt1" Margin="10" Width="200" Height="50" Text="text1"/>
        <TextBox Name="txt2" Margin="10" Width="200" Height="50" Text="{Binding Text, ElementName=txt1, Mode=Default, UpdateSourceTrigger=PropertyChanged}"/>
        <Ellipse Name="ellise" Width="{Binding Path=Value, ElementName=sldr, Mode=OneWay}" Height="{Binding Value, ElementName=sldr, Mode=OneWay}" Fill="AliceBlue" StrokeThickness="0"/>
        <Slider Name="sldr" Minimum="0" Maximum="300" Value="100" Margin="10" Orientation="Horizontal" Width="200" Height="30"/>
    </StackPanel>
</Window>
